%h2= t('.sign_up')
= form_for(resource,
  as: resource_name,
  url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email, class: 'label'
    .control
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input'
  .field
    = f.label :taxvat, class: 'label'
    .control
      = f.text_field :taxvat, autocomplete: 'taxvat', class: 'input'
  .field
    = f.label :password, class: 'label'
    - if @minimum_password_length
      %em
        = t('devise.shared.minimum_password_length',
          count: @minimum_password_length)
    .control
      = f.password_field :password, autocomplete: 'off', class: 'input'
  .field
    = f.label :password_confirmation, class: 'label'
    %br/
    .control
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'input'
  .actions
    = f.submit t('.sign_up'), class: 'button is-primary'
= render 'users/shared/links'
