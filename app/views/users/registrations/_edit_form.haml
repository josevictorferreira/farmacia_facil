.field
  = f.label :first_name
  = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
.field
  = f.label :last_name
  = f.text_field :last_name, autocomplete: "last_name"
.field
  = f.label :email
  = f.email_field :email, autofocus: true, autocomplete: "email"
- if devise_mapping.confirmable? && resource.pending_reconfirmation?
  %div= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email)
.field
  = f.label :password
  = f.password_field :password, autocomplete: "off"
  %p.help
    (#{t('.leave_blank_if_you_don_t_want_to_change_it')})
  - if @minimum_password_length
    %p.help= t('devise.shared.minimum_password_length', count: @minimum_password_length)
.field
  = f.label :password_confirmation
  = f.password_field :password_confirmation, autocomplete: "off"
.field
  = f.label :current_password
  = f.password_field :current_password, autocomplete: "off"
  %p.help
    (#{t('.we_need_your_current_password_to_confirm_your_changes')})
